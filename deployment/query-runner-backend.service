[Unit]
Description=Query Runner Backend Service
After=network.target postgresql.service

[Service]
Type=simple
User=queryrunner
WorkingDirectory=/opt/query-runner/backend
ExecStart=/usr/bin/npm start
Restart=on-failure
RestartSec=10
StandardOutput=append:/var/log/query_runner/backend.log
StandardError=append:/var/log/query_runner/backend.log
Environment="NODE_ENV=production"

[Install]
WantedBy=multi-user.target
